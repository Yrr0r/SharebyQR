{
    "description": "Quickly share the site with QR code.",
    "manifest_version": 2,
    "name": "Share by QR",
    "version": "1.0",
    "homepage_url": "http://127.0.0.1",
    "icons": {
        "16": "icons/qricon-16px.png",
        "32": "icons/qricon-32px.png",
        "128": "icons/qricon-128px.png",
		"512":"icons/qricon-512px.png"
    },
    "background": {
        "scripts": [
        ]
    },
    "permissions": [
        "tabs",
        "http://*/*",
        "https://*/*"
    ],
    "browser_action": {
        "default_icon": "icons/qricon-32px.png",
        "default_title": "Info",
        "default_popup": "popup.html"
    }
}
